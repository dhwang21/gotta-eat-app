<!DOCTYPE html>
<html>
<head>
  <title>Recipe</title>
	<%- include('../../layout/head') %>
</head>
<body>
 
  <div class="recipe-container">
      
      <span class="navbar-toggle" id="js-navbar-toggle">
          <i class="fa fa-bars"></i>
      </span>

      <div class="navigation-bar">
        <ul class="main-navigation" id="js-navigation">

            <li><a href="/home">Home</a></li>
            <li><a href="/aboutus">About Us</a></li>

        </ul>
      </div> <!-- close "navigation-bar" -->

      <div class="recipe-header">
        <h1 class="recipe-h1">Recipe</h1>
      </div> <!-- close "recipe-header" -->
      
    
      <div class="recipe-show">
          
          <% recipeArray.forEach((item, index) => { %>
            <form action="/picked-recipe/<%= item.recipe_id %>"" method = "post">
              <h3><%=item.recipe_title %></h3>
              <img src="<%=item.recipe_image %>" class="recipe-img"/> 
              
              <button type="submit" value= "<%=recipeArray[index].recipe_id %>" class="recipe-button">Select This Recipe</button>
            </form>
            <% }) %>   



            <!-- put inside "recipe-show" so it doesn't cut off the display -->
            
          </div> <!-- close "recipe-show" -->
               
    </div> <!-- close "recipe-container" -->

    <div class="recipe-footer">
      <p>CopyRight2018</p>
    </div>

  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script type="text/javascript" src="/app.js"></script>
</body>
</html>