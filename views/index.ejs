<!DOCTYPE html>
<html>

<head>
	<title>Home</title>
	<%- include('layout/head') %>
</head>

<body>

	<div class="header-container">
		<span class="navbar-toggle" id="js-navbar-toggle">
			<i class="fa fa-bars"></i>
		</span>
		<div class="navigation-bar">
			<ul class="main-navigation" id="js-navigation">
				<li><a href="/aboutus">About Us</a></li>
				<li><a href="/test">Test</a></li>
			</ul>
		 <!-- close "navigation-bar" -->
		</div>


		<div class="main-button">
			<div class="bookmark">
				<p class="bookmark-toggle" id="js-bookmark-toggle">
					Saved Recipes<i class="fa fa-book"></i>
				</p>
			</div> <!-- close "bookmark" -->

			<ul class="main-bookmark" id="js-bookmark">
				<% recipes.forEach(recipe => { %>
				<li class="recipe-item" data-id="<%= recipe.id %>">
				<li><a href="<%= recipe.result_url %>">Title:
						<%= recipe.result_title %></a></li>
				</li>
				<% }) %>
			</ul>

			<div class="main-bar">
				<h1>Gotta Eat!</h1>
				<form action="/get-id" method="get">
					<input class="input-home" type="text" name="search" placeholder="Enter Ingredient" required="required" />


					<button class="button-home" type="submit">Search For Recipe</button>
				</form>
			</div> <!-- close "main-bar" -->


		</div> <!-- close "main-button" -->

	</div> <!-- close "container" -->


	<%- include('layout/footer') %>

</body>

</html>